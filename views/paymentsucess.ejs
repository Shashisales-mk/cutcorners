<% layout("/layouts/boilerplate") %>

    <style>
        ._failed {
            border-bottom: solid 4px red !important;
        }

        ._failed i {
            color: red !important;
        }

        .bl {
            background-color: black;
        }

        .container {
            width: 100%;
            margin-top: 6rem;
            
            align-items: center;
            justify-content: center;
        }

        ._success {
            box-shadow: 0 15px 25px #00000019;
            padding: 45px;
            width: 100%;
            text-align: center;
            margin: 40px auto;
            border-bottom: solid 4px #28a745;
        }

        ._success i {
            font-size: 55px;
            color: #28a745;
        }

        ._success h2 {
            margin-bottom: 12px;
            font-size: 40px;
            font-weight: 500;
            line-height: 1.2;
            margin-top: 10px;
        }

        ._success p {
            margin-bottom: 20px;
            font-size: 18px;
            color: #495057;
            font-weight: 500;
        }

        a {
            color: blue;
            font-size: 1.2rem;
            font-weight: bold;
            text-decoration: underline;
        }

        h3 {
            font-size: 1.5rem;
            margin-bottom: 20px;
        }

        span {
            font-size: 2rem;
            color: #28a745;
        }

        .rating-sec {
            width: 100%;

        }

        #ratingForm {
            width: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            margin-top: -2rem;

        }



        .questions {
            display: none;
            margin-top: 2rem;
            align-items: flex-start;
            justify-content: center;
            flex-direction: column;
            gap: 1rem;
            box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px;
            padding: 2rem;
            margin-bottom: 2rem;
        }

        .form-group input {
            margin-top: 1rem;
            margin-left: 1rem;
        }

        .resub {
            background-color: #C4C800;
            border: none;
            padding: .3rem 1rem;
            /* font-weight: bold; */
            font-size: .9rem;
            border-radius: 5px;
            display: block;
            margin-inline: auto;
            margin-top: 1rem;
        }

        .form-label {
            font-size: 1.2rem;
            font-weight: bold;
            margin-bottom: .5rem;
        }

        @media screen and (max-width : 960px) {
            #ratingForm {
                margin-top: 3rem;
            }
        }
        @media screen and (max-width : 600px) {
            #ratingForm {
                padding-bottom: 5rem;
            }
        }
        @media screen and (max-width : 500px) {
            #ratingForm {
                margin-top: 1rem;
                padding-bottom: 0rem;
            }
        }
        @media screen and (max-width : 430px) {
            #ratingForm {
                margin-top: 5rem;
            }
        }
        @media screen and (max-width : 365px) {
            #ratingForm {
                margin-top: 9rem;
            }
        }
    </style>



    <div class="main-page">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-5">
                    <div class="message-box _success">
                        <i class="fa fa-check-circle" aria-hidden="true"></i>
                        <h2>Your payment was successful</h2>
                        <h3>Amount paid: <span>â‚¹<%= amount %></span></h3>
                        <p>Thank you for your payment. we will <br>
                            be in contact with more details shortly</p>

                        <a href="/">Go Back To Home</a>
                    </div>
                </div>
            </div>
        </div>

       
    </div>

   