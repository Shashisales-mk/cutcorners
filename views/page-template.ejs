<% layout("/layouts/boilerplate") %>



<body>
 

    <div class="banner pb-0" style="background-color: #f7f7f7 ;">
        <div class="container">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="index.html">Home</a>
                </li>
                <li class="breadcrumb-item">
                    <a href="#">Party By Theme</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Love Theme</li>
            </ol>
        </div>
    </div>

                <% if (typeof sections !=='undefined' && sections && sections.length> 0) { %>
                    <% sections.forEach(section=> { %>
                        <section class="gap no-top" style="background-color: #f7f7f7 ;">
                            <div class="container">
                                <div class="row">
                                    <div class="occasion-details">
                                        <div class="row">
                                            <div class="col-lg-6">
                                                <div class="pd-gallery two">
                                                    <div class="pd-main-img">
                                                        <img id="NZoomImg" alt="<%= section.title %>"
                                                            src="<%= section.images.length > 0 ? section.images[0] : '/path/to/placeholder-image.jpg' %>">
                                                    </div>
                                                    <% if (section.images && section.images.length> 0) { %>
                                                        <ul class="pd-imgs">
                                                            <% section.images.forEach((image, index)=> { %>
                                                                <li
                                                                    class="li-pd-imgs <%= index === 0 ? 'nav-active' : '' %>">
                                                                    <a href="JavaScript:void(0)">
                                                                        <img alt="<%= section.title %>"
                                                                            src="<%= image %>">
                                                                    </a>
                                                                </li>
                                                                <% }) %>
                                                        </ul>
                                                        <% } %>
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="theme-text party-balloons">
                                                    <h6>Ready Time <span>– <%= section.readyTime %> to <%= (section.readyTime + 0.5).toFixed(1) %> Hours</span></h6>
                                                    <h3>
                                                        <%= section.title %>
                                                    </h3>

                                                    <div class="content">
                                                        <p align="justify">
                                                            <%= section.description %>
                                                        </p>
                                                        <% if (section.features && section.features.length> 0) { %>
                                                            <div class="party-balloons">
                                                                <ul>
                                                                    <% section.features.forEach(feature=> { %>
                                                                        <li><img alt="chak" src="/assets/img/chak.png">
                                                                            <%= feature %>
                                                                        </li>
                                                                        <% }) %>
                                                                </ul>
                                                            </div>
                                                            <% } %>
                                                    </div>
                                                    <div class="d-flex align-items-center">
                                                        <div class="d-flex align-items-baseline">
                                                            <h4>₹ <%= section.price.toFixed(2) %>/-</h4>
                                                            <span>(Add On's will be charged separately)</span>
                                                        </div>
                                                    </div><br>

                                                    <a href="/booking" class="btn"><span>Book Now</span></a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </section>
                        <% }) %>
                            <% } %>


    <section class="gap no-top">
        <div class="container">
            <div class="comment mt-0">
                <h3>Similar Theme Parties</h3>
                <div class="boder"></div>
            </div>
            <div class="row">
                <div class="col-lg-4 col-md-6">
                    <div class="similar-occasion">
                        <figure>
                            <img src="/assets/img/theme/6.png" alt="similar-occasion">
                        </figure>

                        <a href="/birthday_theme">
                            <h4>Birthday Theme</h4>
                        </a>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6">
                    <div class="similar-occasion">
                        <figure>
                            <img src="/assets/img/theme/8.png" alt="similar-occasion">
                        </figure>

                        <a href="#">
                            <h4>Bride/Groom Theme</h4>
                        </a>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6">
                    <div class="similar-occasion">
                        <figure>
                            <img src="/assets/img/theme/7.png" alt="similar-occasion">
                        </figure>

                        <a href="#">
                            <h4>Baby Theme</h4>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    
</body>

